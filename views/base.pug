                    a.nav--link(href="#") stats  
                li 
                    a.nav--link(href="#") logout 
                li 
                    img.user-profile(src='/img/TackleDefaultPics.png' alt='user profile')
        main 
            form.task--entry(action="") 
                label(for="new task") 
                    input.task-input(type="text" placeholder=`What's your plan for today`)
                    button.task-btn add task 
                h1.task--h1 task to do 
                .task--container 
                    span.task--name learn javascript 
                    input.checkbox(type="checkbox")
